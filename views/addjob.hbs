<script>
    $(document).ready(function () {
        $("input[data-bootstrap-switch]").each(function () {
            $(this).bootstrapSwitch('state', $(this).prop('checked'));
        });
        $('.status').bootstrapSwitch('state');
    });
</script>
<script>
    $(document).ready(function () {
        $('#discount, #artDigitalAmount').on('input', function () {
            calculateDiscountedPrice();
        });
        $('#discountedPrice').hover(function () {
            calculateDiscountedPrice();
        });
        function calculateDiscountedPrice() {
            var artDigitalAmount = $('#artDigitalAmount').val();
            var discount = $('#discount').val();
            if (artDigitalAmount && discount) {
                var discountedPrice = parseFloat(artDigitalAmount) + parseFloat(artDigitalAmount * (discount / 100));
                $('#discountedPrice').val(discountedPrice);
            }
        }
    });
</script>
<script>
    function logTotalPayableAmount() {
        var discountedPrice = $('#discountedPrice').val();
        console.log('Total Payable Amount:', discountedPrice);
    }
</script>
